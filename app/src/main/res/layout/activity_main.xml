<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/YP_Blue"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:minHeight="36dp"
        android:layout_marginHorizontal="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:text="@string/app_name"
        android:textSize="@dimen/headtext_size"
        android:gravity="start">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:padding="@dimen/button_padding"
            android:layout_weight="1"
            android:text="@string/search_text"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            app:backgroundTint="@color/YP_White"
            app:cornerRadius="@dimen/button_cornerRadius"
            app:icon="@drawable/search_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/YP_Black" />

        <Button
            android:id="@+id/medialibrary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:padding="@dimen/button_padding"
            android:layout_weight="1"
            android:text="@string/medialibrary_text"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            app:backgroundTint="@color/YP_White"
            app:cornerRadius="@dimen/button_cornerRadius"
            app:icon="@drawable/medialibrary_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/YP_Black" />

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:padding="@dimen/button_padding"
            android:layout_weight="1"
            android:text="@string/settings_text"
            android:textAllCaps="false"
            android:textColor="@color/YP_Black"
            app:backgroundTint="@color/YP_White"
            app:cornerRadius="@dimen/button_cornerRadius"
            app:icon="@drawable/settincgs_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/YP_Black" />

    </LinearLayout>


</LinearLayout>