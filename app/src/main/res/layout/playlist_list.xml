<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_13dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">

        <ImageView
            android:id="@+id/coverPlaylist"
            android:layout_width="@dimen/cover_size"
            android:layout_height="@dimen/cover_size"
            android:layout_gravity="center"

            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder_ico" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/playlistInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_14dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlePlaylist"
            style="@style/TrackNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Название плейлиста" />

        <TextView
            android:id="@+id/trackCount"
            style="@style/TrackInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0 треков" />

    </LinearLayout>
</LinearLayout>
