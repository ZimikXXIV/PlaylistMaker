<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main_layoutVertical"
    >

    <TextView
        android:id="@+id/btnBack"
        android:text="@string/settingsText"
        app:drawableStartCompat="@drawable/back_icon"
        style="@style/Header_txtViewStyle">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/textview_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:text="@string/darkThemeText"
                style="@style/Settings_txtViewWithSwitchStyle"
                >
            </TextView>

            <Switch
                style="@style/Settings_switchStyle"
                android:id="@+id/switchDayNight"
                android:layout_weight="3"
                android:minHeight="48dp"
                tools:ignore="UseSwitchCompatOrMaterialXml">
            </Switch>

        </LinearLayout>

        <TextView
            android:id="@+id/btnShare"
            style="@style/Settings_txtViewStyle"
            android:layout_weight="1"
            android:text="@string/shareText"
            app:drawableEndCompat="@drawable/shareapp_icon">
        </TextView>

        <TextView
            android:id="@+id/btnSupport"
            android:layout_weight="1"
            android:text="@string/techsupportText"
            app:drawableEndCompat="@drawable/techsupport_icon"
            style="@style/Settings_txtViewStyle">
        </TextView>

        <TextView
            android:id="@+id/btnLicense"
            android:layout_weight="1"
            android:text="@string/licenseText"
            android:layout_marginVertical="@dimen/textview_margin"
            app:drawableEndCompat="@drawable/arrowright_icon"
            style="@style/Settings_txtViewStyle">
        </TextView>

    </LinearLayout>

</LinearLayout>