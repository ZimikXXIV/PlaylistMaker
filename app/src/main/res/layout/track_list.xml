<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/coverAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="2"
        app:srcCompat="@drawable/place_holder_img" />

    <LinearLayout
        android:id="@+id/trackInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/regular_text_size"
            tools:text="Большое и длинное название песни" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/artistNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:minWidth="13dp"
                android:minHeight="13dp"
                android:textColor="@color/YP_Grey"
                android:textSize="@dimen/small_text_size"
                tools:text="Исполнитель" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:minWidth="13dp"
                android:minHeight="13dp"
                app:srcCompat="@drawable/tactical_dot_ico" />

            <TextView
                android:id="@+id/durationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:minWidth="13dp"
                android:minHeight="13dp"
                android:textColor="@color/YP_Grey"
                android:textSize="@dimen/small_text_size"
                tools:text="Время" />
        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="2"
        android:textColor="@color/YP_Grey"
        app:srcCompat="@drawable/arrowright_icon"

        />


</LinearLayout>