<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="MainLayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainBtnStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="backgroundTint">@color/YP_White</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name = "HeaderTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingStart">@dimen/textview_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name = "HeaderBtnBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
    <style name = "SettingsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:drawableTint">@color/Icon_Tint</item>
        <item name ="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name = "SettingsTextViewWithSwitchStyle">
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsSwitchStyle">
        <item name="thumbTint">@color/Switch_thumb</item>
        <item name="trackTint">@color/Switch_track</item>
    </style>

    <style name = "SearchEditViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="tint">@color/Search_Hint_Color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_shape</item>
        <item name="android:layout_margin">@dimen/editview_margin</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingHorizontal">@dimen/editview_padding</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:textColor">@color/Search_Text_Color</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">@color/Search_Hint_Color</item>
        <item name="android:drawableTint">@color/Search_Hint_Color</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackNameTextView">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TrackInfoTextView">
        <item name="android:textSize">@dimen/text_size_11sp</item>
        <item name="android:textColor">@color/Track_List_Under_Name_Color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconTint">@color/Track_List_Under_Name_Color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EmptyTrackListTextView">
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BadInternetConnectyionTextView">
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minLines">3</item>
    </style>

    <style name="MedialibraryGagTextView">
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="refreshSearchButton">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/refresh_shape</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FragmentTablayout">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>

    </style>

    <style name="PlayerTrackInfoTextView">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:textColor">@color/YP_Grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerTrackLabelTextView">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:textColor">@color/YP_Grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerDurationTextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerTrackNameTextView">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlaylistCardTextView">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NewPlaylistHeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>

    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/YP_Blue</item>
        <item name="hintTextColor">@color/YP_Blue</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="colorControlActivated">@color/YP_Blue</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/YP_White</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/YP_Black</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/YP_Black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/YP_Blue</item>
    </style>

    <style name="NegativeStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/YP_Blue</item>
    </style>

    <style name="NeutralStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/YP_Grey</item>
    </style>

    <style name="BottomSheetMenuTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_21dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_12dp</item>
        <item name="android:paddingStart">@dimen/textview_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:clickable">true</item>
    </style>


</resources>
