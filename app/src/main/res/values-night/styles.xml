<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Main_layoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name = "Main_btnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name = "android:padding">@dimen/button_margin</item>
        <item name = "android:layout_margin">@dimen/button_padding</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textColor">@color/YP_Black</item>
        <item name = "backgroundTint">@color/YP_White</item>
        <item name = "cornerRadius">@dimen/button_cornerRadius</item>
        <item name = "iconGravity">textStart</item>
        <item name = "iconTint">@color/YP_White</item>
    </style>
    <style name = "Header_txtViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/textview_margin</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/headtext_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name = "Settings_txtViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/textview_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:drawableTint">@color/YP_White</item>
    </style>
    <style name = "Settings_txtViewWithSwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name = "Settings_switchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:thumbTint">@color/YP_Blue</item>
        <item name="android:trackTint">@color/YP_BlueLight</item>
    </style>
</resources>